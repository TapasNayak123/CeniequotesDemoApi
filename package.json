  "description": "Demo Shop App",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node .",
    "test": "mocha -r ts-node/register tests/**/*.spec.ts --timeout 100000",
